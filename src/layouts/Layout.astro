---
import { Font } from "astro:assets";
import groqning from "../assets/groqning.svg";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Groq Cookbook</title>
    <slot name="head" />
  </head>
  <body class="">
    <!-- Prototype Banner -->
    <div class="bg-groq text-white py-2 px-4 text-center text-sm font-medium">
      <div class="font-montserrat max-w-7xl mx-auto text-sm font-light tracking-widest uppercase">
        *** This is a prototype ***
      </div>
    </div>
    <div class="flex flex-col min-h-screen">
      <main class="flex-grow">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="bg-gray-50 border-t border-gray-200 py-8 mt-16 pb-16">
        <div class="max-w-7xl mx-auto px-4 text-center">
          <a
            href="https://groq.com"
            target="_blank"
            rel="noopener noreferrer"
            class="button inline-flex items-center text-groq hover:text-groq transition-colors duration-200 text-md font-medium"
          >
            Build fast
            <span class="ml-2 mr-2">
              <img src={groqning.src} alt="Groq API Logo" class="w-8 h-8" />
            </span>
            with Groq
          </a>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    /* font-family: var(--font-montserrat); */
    font-family:
      "Arial",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif !important;
  }
</style>
