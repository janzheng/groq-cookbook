---
export interface Props {
  imageUrl?: string; // Made imageUrl optional
  username: string;
  size?: 'sm' | 'md' | 'lg';
}

const { imageUrl, username, size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-8 h-8', 
  lg: 'w-12 h-12'
};
---
<img 
  src={imageUrl || 'data:image/svg+xml;base64,'} 
  alt={username}
  class={`rounded-full bg-gray-200 object-cover ${sizeClasses[size]}`}
/> 