---
export interface Props {
  examplesBySection: Record<string, any[]>;
  asideClass?: string;
  currentSlug?: string;
}

const { examplesBySection, asideClass, currentSlug } = Astro.props;
---

<aside class={`w-80 h-screen overflow-y-auto flex-shrink-0 px-4 ${asideClass}`}>
  <div class="p-6">
    <!-- Header -->
    <!-- <div class="mb-6">
      <a
        href="/"
        class="button text-md font-semibold text-groq border-b-2 border-groq pb-2 hover:text-groq-600 transition-colors"
      >
        Docs
      </a>
    </div> -->

    <!-- Examples by Section -->
    <nav class="space-y-6">
      {
        Object.entries(examplesBySection).map(([section, examples]) => (
          <div class="section-group">
            <div class="font-montserrat text-sm font-light text-gray-900 uppercase tracking-wide mb-2">
              <span>{section}</span>
            </div>
            <div class="space-y-0">
              {examples.map((example: any) => (
                <a
                  href={`/recipe/${example.slug}`}
                  class={`block py-1.5 transition-colors duration-200 ${
                    example.slug === currentSlug
                      ? "text-groq-600 font-medium bg-groq-50 px-2 -mx-2 rounded"
                      : "text-gray-600 hover:text-groq-600"
                  }`}
                >
                  <div class="text-sm leading-tight">
                    {example.title}
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </nav>
  </div>
</aside>

<style>
  /* Sidebar specific overrides */
  nav a {
    text-decoration: none !important;
  }
  
  nav a:hover {
    text-decoration: none !important;
  }
</style> 