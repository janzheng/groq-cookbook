---
export interface Props {
  href: string;
  size?: 'sm' | 'md';
}

const { href, size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-4 py-2 text-base'
};
---

<button 
  onclick={`window.open('${href}', '_blank')`}
  class={`border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 rounded-md font-medium transition-colors duration-200 flex items-center ${sizeClasses[size]}`}
>
  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
  </svg>
  Demo
</button> 